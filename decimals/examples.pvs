examples : THEORY
BEGIN

  IMPORTING decimalstr

  dec_parser : void =
    LET r = decstr2rat("1.23456789") IN
    printf("~a",r)

  dec_format : void =
    LET r = 1/3 IN
    printf("~a~%",rat2decstr(r,5)) & %% 5 decimals
    set_precision(10) &
    printf("~a",rat2str(r))          %% 10 decimals

  dec_formatter : void =
    LET r = 1/3 IN
    printf("~-10/pvs:d/~%",r) &  %% 10 decimals
    printf("~-20/pvs:d/",r)      %% 20 decimals

END examples
