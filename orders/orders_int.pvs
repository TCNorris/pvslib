orders_int: THEORY
%
% Convenience definition of the order relations on intural numbers.
% These definitions help to reduce the amount of TCCs produced by PVS (versus
%  using the built-in relation on reals).
%
BEGIN

  lt_int(a,b: int): MACRO bool = a < b

  le_int(a,b: int): MACRO bool = a <= b

  gt_int(a,b: int): MACRO bool = a > b

  ge_int(a,b: int): MACRO bool = a >= b

END orders_int
