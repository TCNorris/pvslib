orders_rat: THEORY
%
% Convenience definition of the order relations on ratural numbers.
% These definitions help to reduce the amount of TCCs produced by PVS (versus
%  using the built-in relation on reals).
%
BEGIN

  lt_rat(a,b: rat): MACRO bool = a < b

  le_rat(a,b: rat): MACRO bool = a <= b

  gt_rat(a,b: rat): MACRO bool = a > b

  ge_rat(a,b: rat): MACRO bool = a >= b

END orders_rat
